<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseActivity"
    android:background="@drawable/up_background"

    >

    <Button
        android:id="@+id/img_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:layout_marginTop="150dp"
        android:background="@drawable/custom_button"
        android:text="Image"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"

        />
    <Button
        android:id="@+id/pdf_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"

        android:background="@drawable/custom_button"
        android:text="Pdf"
        android:textColor="@color/colorBlack"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn" />
    <Button
        android:id="@+id/docs_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"

        android:background="@drawable/custom_button"
        android:text="Docs"
        android:textColor="@color/colorBlack"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/pdf_btn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:text="CHOOSE  FILE TYPE"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>